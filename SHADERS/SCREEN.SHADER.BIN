{
	VertexShader = compile GLSL VS_GENERAL;
    PixelShader  = compile GLSL FS_ICON_FORWARD;
}

context LIT_DEFER
{
	VertexShader = compile GLSL VS_DEFER;
	PixelShader  = compile GLSL FS_LIT_DEFER;
}

context DEPTH_CLEAR
{
	VertexShader = compile GLSL VS_DEFER;
	PixelShader  = compile GLSL FS_DEPTH_CLEAR;
}

