<!-- Render Albedo to Imposter - Pipeline -->
<Pipeline>
    
  <Setup>

  </Setup>

  <!-- Scene rendering -->
  <CommandQueue>

    <Stage id="SetRenderTarget">
      <BeginTarget target="" />
    </Stage>

    <Stage id="ClearRenderTarget">
      <ColourMask channels="RGBA"/>
      <ClearTarget depthBuf="true" colBuf0="true" excludeX360="true" col_R="0.0" col_G="0.0" col_B="0.0" col_A="0.0" />
    </Stage>

    <Stage id="Draw">
      <!--<DrawQuad material="materials/Debug.material.mbin" context="FLATCOLOUR" width ="0.5" height="0.5" />-->
      <!--<SetContext zwrite="false" colourWrite="true" cullMode="back" blendMode="blend" depthTest="less" alphaToCoverage="false"/>-->
      <ColourMask channels="RGBA"/>
      <SetContext zwrite="true" colourWrite="true" cullMode="back" blendMode="replace" depthTest="less" alphaToCoverage="false"/>
      <DoForwardLightLoop type="Mesh"     class="Cutout"      context="IMPOSTER_COLOUR"    order="STATECHANGES" />
      <DoForwardLightLoop type="Mesh"     class="Opaque"      context="IMPOSTER_COLOUR"    order="STATECHANGES" />
      <DoForwardLightLoop type="Mesh"     class="Highlight"   context="IMPOSTER_COLOUR"    order="STATECHANGES" />
      <DoForwardLightLoop type="Mesh"     class="DoubleSided" context="IMPOSTER_COLOUR"    order="STATECHANGES" />
      <DoForwardLightLoop type="Mesh"     class="Glow"        context="IMPOSTER_COLOUR"    order="STATECHANGES" />

      <SetContext zwrite="true" colourWrite="true" cullMode="none" blendMode="replace" depthTest="less" alphaToCoverage="true"/>
      <DoForwardLightLoop type="Mesh"         class="DoubleSided"    context="IMPOSTER_COLOUR"             order="STATECHANGES" />

      <SetContext zwrite="false" colourWrite="true" cullMode="back" blendMode="blend" depthTest="less" />
      <DoForwardLightLoop type="Mesh"         class="Translucent"    context="IMPOSTER_COLOUR"             order="STATECHANGES" />

      <SetContext zwrite="false" colourWrite="true" cullMode="back" blendMode="add" depthTest="less" />
      <DoForwardLightLoop type="Mesh"         class="Additive"    context="IMPOSTER_COLOUR"             order="STATECHANGES" />

    </Stage>

    <Stage id="UnSetRenderTarget">
      <EndTarget flushCB="true" flushDB="false" />
    </Stage>


  </CommandQueue>

</Pipeline>
